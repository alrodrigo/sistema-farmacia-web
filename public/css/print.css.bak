/* ==================== ESTILOS PARA IMPRESIÓN ==================== */

/* Ocultar todo excepto el recibo cuando se imprime */
@media print {
    body * {
        visibility: hidden;
    }
    
    #printReceipt,
    #printReceipt * {
        visibility: visible;
    }
    
    #printReceipt {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        max-width: none;
    }
    
    /* Ocultar elementos innecesarios */
    .navbar,
    .sidebar,
    .modal-close,
    .btn-print,
    .btn-new-sale,
    .sale-actions,
    button {
        display: none !important;
    }
    
    /* Ajustar tamaño de página para A4 */
    @page {
        size: A4 portrait;
        margin: 10mm 15mm;
    }
    
    /* Estilos específicos para impresión */
    body {
        margin: 0;
        padding: 0;
    }
    
    /* Forzar que todo quepa en 1 página */
    #printReceipt {
        page-break-inside: avoid;
        page-break-after: avoid;
    }
}

/* Estilos del recibo (tanto en pantalla como en impresión) */
#printReceipt {
    max-width: 600px;
    margin: 0 auto;
    padding: 15px;
    font-family: 'Arial', 'Helvetica', sans-serif;
    font-size: 13px;
    line-height: 1.3;
    color: #000;
    background: #fff;
}

/* Para impresión, ajustar padding y espaciado */
@media print {
    #printReceipt {
        padding: 0;
        max-width: 100%;
        font-size: 12px;
        line-height: 1.2;
    }
}

.receipt-header {
    text-align: center;
    margin-bottom: 10px;
    padding-bottom: 8px;
    border-bottom: 2px dashed #333;
}

.receipt-logo {
    width: 100px;
    margin: 0 auto 8px;
}

.receipt-logo img {
    width: 100%;
    height: auto;
}

.receipt-title {
    font-size: 18px;
    font-weight: bold;
    margin: 4px 0;
    letter-spacing: 0.5px;
}

.receipt-subtitle {
    font-size: 11px;
    margin: 2px 0;
    color: #333;
}
.receipt-info {
    margin: 10px 0;
    font-size: 12px;
}

.receipt-info-row {
    display: flex;
    justify-content: space-between;
    margin: 4px 0;
    padding: 2px 0;
}

.receipt-info-label {
    font-weight: bold;
    color: #555;
}

.receipt-divider {
    border-top: 1px dashed #333;
    margin: 8px 0;
}

.receipt-items {
    margin: 20px 0;
}

.receipt-item {
    margin: 12px 0;
    padding: 8px 0;
    font-size: 14px;
    border-bottom: 1px dotted #ccc;
}

.receipt-item:last-child {
    border-bottom: none;
}

.receipt-item-name {
    font-weight: bold;
    margin-bottom: 5px;
    font-size: 15px;
}
.receipt-totals {
    margin: 10px 0;
    padding-top: 8px;
    border-top: 2px solid #333;
}

.receipt-total-row {
    display: flex;
    justify-content: space-between;
    margin: 4px 0;
    font-size: 13px;
    padding: 2px 0;
}

.receipt-total-row.main {
    font-size: 16px;
    font-weight: bold;
    margin-top: 8px;
    padding-top: 8px;
    border-top: 2px solid #333;
    color: #000;
}

.receipt-payment {
    margin: 10px 0;
    padding: 8px 0;
    border-top: 2px dashed #333;
    border-bottom: 2px dashed #333;
    background-color: #f9f9f9;
}

@media print {
    .receipt-payment {
        background-color: transparent;
    }
}

.receipt-footer {
    text-align: center;
    margin-top: 12px;
    font-size: 10px;
}

.receipt-footer-line {
    margin: 3px 0;
    color: #666;
}

.receipt-thank-you {
    font-weight: bold;
    margin: 8px 0;
    font-size: 13px;
    color: #0D3C61;
}

.receipt-footer-line {
    margin: 5px 0;
}

.receipt-thank-you {
    font-weight: bold;
    margin: 10px 0;
    font-size: 12px;
}

/* Estilo para mostrar vista previa antes de imprimir */
.print-preview {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 9999;
    overflow: auto;
}

.print-preview.active {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

.print-preview-content {
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    max-height: 90vh;
    overflow: auto;
}

.print-preview-actions {
    text-align: center;
    margin-top: 20px;
    padding-top: 20px;
    border-top: 2px solid #eee;
}

.print-preview-actions button {
    margin: 0 10px;
}
